<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- RPLidar S2 Compact DTOF Laser Scanner Macro -->
  <xacro:macro name="rplidar_s2" params="parent name xyz rpy">
    
    <!-- Lidar Base Link -->
    <link name="${name}_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.038" length="0.041"/>  <!-- S2 real dimensions: 76mm diameter, 41mm height -->
        </geometry>
        <material name="rplidar_black">
          <color rgba="0.1 0.1 0.1 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.038" length="0.041"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.190"/>  <!-- S2 real weight: 190g -->
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
    </link>

    <!-- Attach to parent -->
    <joint name="${name}_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${name}_link"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
    </joint>

    <!-- Laser scan frame -->
    <link name="${name}_frame">
    </link>

    <joint name="${name}_frame_joint" type="fixed">
      <parent link="${name}_link"/>
      <child link="${name}_frame"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

  </xacro:macro>

  <!-- Gazebo Plugin for RPLidar S2 -->
  <xacro:macro name="rplidar_s2_gazebo_plugin" params="name">
    
    <gazebo reference="${name}_link">
      <sensor type="ray" name="${name}_sensor">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <update_rate>10</update_rate>  <!-- 10 Hz scanning frequency -->
        <ray>
          <scan>
            <!-- Real S2 specifications -->
            <horizontal>
              <samples>3000</samples>  <!-- High resolution: 32K sampling capability, using 3000 for simulation performance -->
              <resolution>1</resolution>
              <min_angle>-3.141592653589793</min_angle>  <!-- -180 degrees -->
              <max_angle>3.141592653589793</max_angle>   <!-- +180 degrees (360Â° total) -->
            </horizontal>
          </scan>
          <range>
            <min>0.05</min>  <!-- S2 minimum range: ~5cm -->
            <max>30.0</max>  <!-- S2 maximum range: 30m -->
            <resolution>0.01</resolution>  <!-- 1cm resolution -->
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>  <!-- Low noise for high-precision DTOF technology -->
          </noise>
        </ray>
        <plugin name="laser_controller" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <namespace></namespace>
            <remapping>~/out:=${name}/scan</remapping>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
          <frame_name>${name}_frame</frame_name>
        </plugin>
      </sensor>
    </gazebo>

  </xacro:macro>

</robot> 